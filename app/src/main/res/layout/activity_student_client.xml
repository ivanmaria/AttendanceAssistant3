<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.github.ivanmaria.attendanceassistant.StudentClient">

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.09"
        android:background="#E0E0E0"
        android:popupBackground="#F5F5F5" />

    <Button
        android:id="@+id/selsub"
        style="@style/ButtonColor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="SelectSubject"
        android:text="Select Subject" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#BDBDBD"
            android:ems="10"
            android:inputType="number"
            android:text="192"
            android:textColor="#000000"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/ip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#BDBDBD"
            android:ems="10"
            android:inputType="number"
            android:text="168"
            android:textColor="#000000"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/ip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#BDBDBD"
            android:ems="10"
            android:inputType="number"
            android:textColor="#000000"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/ip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#BDBDBD"
            android:ems="10"

            android:inputType="number"
            android:textColor="#000000"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/connect"
        style="@style/ButtonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonConnectOnClickListener"
        android:text="Give Attendance"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="un-initiated"
        android:textSize="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:visibility="invisible" />

</LinearLayout>
